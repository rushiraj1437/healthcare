<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/css/bootsrap.min.css" rel="stylesheet" />

    <link href="~/Content/css/Site.css" rel="stylesheet" />


</head>
<body class="d-flex flex-column min-vh-100">
    <div class="navbar navbar-dark bg-dark ">
        <div class="container">

            <div class="navbar-header">
                @Html.ActionLink("Home", "Check", "Patient", new { area = "" }, new { @class = "navbar-brand" })
            </div>

        </div>
        <div class="navbar-header">
            @Html.ActionLink("Logout", "Logout", "Account", new { area = "" }, new { @class = "navbar-brand" })
        </div>

    </div>

    <div class="container body-content">
        @RenderBody()

    </div>
    <footer class="footer-section text-center bg-dark text-light">
        <p class="py-3 m-0">&copy; 2020 All rights are reserved.</p>
    </footer>

    <script src="~/Content/scripts/jquery.js"></script>

    <script src="~/Content/scripts/jquery.validate.min.js"></script>

    <script src="~/Content/scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Content/scripts/bootstrap.bundle.min.js"></script>
</body>

</html>